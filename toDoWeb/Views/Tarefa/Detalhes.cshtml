@model toDoWeb.Models.Tarefa

@{
    ViewData["Title"] = "Detalhes do contato";
}

<h1>Detalhes da tarefa @Html.DisplayFor(x => x.Id)</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Titulo)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Titulo)
        </dt>  
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Descricao)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Descricao)
        </dt>  
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Data)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Data)
        </dt>  
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Status)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Status)
        </dt>   
    </dl>
</div>
<div class="form-group mt-3">
    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Deletar" asp-route-id="@Model.Id">
        <button type="button" class="btn btn-danger">Excluir</button>
    </a>
    <a asp-action="Index" class="btn btn-secondary"> Voltar</a>
</div>